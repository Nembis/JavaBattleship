            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <children>
                  <Button mnemonicParsing="false" onAction="#loadSetupScene" prefHeight="31.0" prefWidth="65.0" text="Continue" />
                  <Button mnemonicParsing="false" onAction="#loadDifficultyScene" prefHeight="31.0" prefWidth="65.0" text="Return" />
