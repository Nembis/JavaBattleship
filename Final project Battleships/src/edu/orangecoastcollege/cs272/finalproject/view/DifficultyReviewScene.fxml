            <Label fx:id="aIMoveShip" alignment="CENTER" prefHeight="21.0" prefWidth="311.0" text="Your opponent is able to move his own ships" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
            <Label text="Is this okay?" GridPane.halignment="RIGHT" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </children>
