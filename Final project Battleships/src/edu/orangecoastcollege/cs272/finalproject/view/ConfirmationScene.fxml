<AnchorPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.orangecoastcollege.cs272.finalproject.view.ConfirmationScene">
   <children>
      <GridPane layoutY="-7.0" prefHeight="201.0" prefWidth="272.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="272.0" minWidth="10.0" prefWidth="272.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="131.0" minWidth="0.0" prefWidth="0.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label prefHeight="50.0" prefWidth="272.0" text="There is already a game in progress. Do you want to start a new game?" textAlignment="CENTER" wrapText="true" GridPane.rowIndex="1" />
            <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10.0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <children>
                  <Button mnemonicParsing="false" onMouseClicked="#restart" prefHeight="49.0" prefWidth="65.0" text="Yes" />
                  <Button mnemonicParsing="false" onMouseClicked="#continueOldGame" prefHeight="51.0" prefWidth="65.0" text="No" />
                  <Button mnemonicParsing="false" onMouseClicked="#loadDifficultyScene" prefHeight="44.0" prefWidth="65.0" text="Cancel" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </children>
</AnchorPane>
